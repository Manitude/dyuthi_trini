<h1>Editing plant</h1>
 
<%= form_for :plant, url: plant_path(@plant), method: :patch do |f| %>
 
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@plant.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @plant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= form.label :choose_site %><br>
    <%= form.select :site_id, Site.all.collect {|c| [ c.name, c.id ] } %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', plants_path %>